source "$HOME/.config/sketchybar/config.sh"

# Base Sketchybar Configuration
sketchybar --bar height=30 \
    blur_radius=100  \
    position=top     \
    padding_left=10  \
    padding_right=10 \
    color=0x15ffffff \
    shadow=on

sketchybar --default updates=when_shown                       \
    drawing=on                               \
    icon.font="$FONT:Regular:14.0"     \
    icon.color=0xffffffff              \
    label.font="$FONT:Light:14.0"            \
    label.color=0xffffffff                   \
    label.padding_left=4                     \
    label.padding_right=4                    \
    icon.padding_left=4                      \
    icon.padding_right=4

for item in "${SKETCHYBAR_ITEMS[@]}"; do
    source $item
    sleep 0.1
done

sketchybar --update